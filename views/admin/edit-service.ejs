<%- include('../includes/header')%>

<div class="container">
  <form action="/admin/create-service" method="POST">
    <div class="form-group">
      <label for="service-title">Наименование услуги</label>
      <input class="form-control" type="text" name="service-title" id="service-title"
        value="<%= service["service-title"] %>" />
    </div>

    <div class="form-group">
      <label for="service-time">Время, мин</label>
      <input class="form-control col-sm-2" type="time" name="service-time" id="service-time"
        value="<%= service["service-time"] %>" />
    </div>
    <div class="form-group">
      <input type="hidden" name="id" value="<%= service._id%>">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success" style="float:right;">Сохранить</button>
    </div>
  </form>
</div>

<%- include('../includes/footer')%>