<%- include('../includes/header')%>


<div class="container">
  <form action="/admin/update-service" method="POST">
    <div class="form-group">
      <label for="title">Наименование услуги</label>
      <input class="form-control" type="text" name="title" id="title" value="<%= service.title %>" />
    </div>

    <div class="form-group">
      <label for="employee">Кто оказывает услугу</label>
      <select class="form-control" id="employee" name="employee">
        <!--  <option>Выберите сотрудника</option> -->
        <% employees.forEach((item) => {%>
        <% if (item._id == service.employeeId) { %>
        <option value="<% item._id %>" selected><%= item.employee %></option>
        <% } else {%>
        <option value="<%= item._id %>"><%= item.employee %></option><%}%>
        <% })%>
      </select>
    </div>
    <div class="form-group">
      <label for="time">Время, мин</label>
      <input class="form-control col-sm-2" type="time" name="time" id="time" value="<%= service.time %>" />
    </div>
    <div class="form-group">
      <input type="hidden" name="id" value="<%= service._id%>">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success" style="float:right;">Сохранить</button>
    </div>
  </form>
</div>

<%- include('../includes/footer')%>