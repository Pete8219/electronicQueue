<%- include("../includes/header") %>
<div class="container">
  <h3> Создайте новую роль для пользователей</h3>
  <form action="/admin/save-role" method="POST">
    <div class="role-form col-sm-6">
      <div class="form-group">
        <label for="role">Название</label>
        <input class="form-control" type="text" id="role" name='role'>

      </div>
      <div class="form-group">
        <label for="title">Роль</label>
        <input class="form-control" type="text" id="title" name='title'>

      </div>
      <div class="form-group">
        <label for="description">Описание возможностей</label>
        <textarea class="form-control" id="description" name='description' rows="3"></textarea>

      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-success">Сохранить</button>
      </div>
    </div>
  </form>
</div>


<%- include("../includes/footer") %>