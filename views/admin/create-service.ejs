<%- include('../includes/header')%>

<div class="container">
  <form action="create-service" method="POST">
    <div class="form-group">
      <label for="service-title">Наименование услуги</label>
      <input class="form-control" type="text" name="service-title" id="service-title" />
    </div>
    <div class="form-group">
      <label for="employee-select">Кто оказывает услугу</label>
      <select class="form-control" id="employee-select">
        <option selected>Выберите сотрудника</option>
        <option>Иванов</option>
        <option>Петров</option>
        <option>Сидоров</option>
      </select>
    </div>
    <div class="form-group">
      <label for="service-time">Время, мин</label>
      <input class="form-control col-sm-2" type="text" name="service-time" id="service-time" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success" style="float:right;">Сохранить</button>
    </div>
  </form>
</div>

<%- include('../includes/footer')%>
