<%- include('../includes/header')%>
<div class="container">
  <p class="lead">Список сотрудников управления</p>
  <div class="row">
    <div class="col">
      <a href="/admin/employee-create">
        <button class="btn btn-success btn-right" type="button" style="float:right;">Новый</button>
      </a>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover employees">
      <thead class="thead-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Сотрудник</th>
          <th scope="col">Роль</th>
        </tr>
      </thead>
      <tbody>

        <% employee.forEach(function(item, i){%>
        <tr>
          <th scope="col"><%= i+1%> </th>
          <td><a href="employee/<%= item._id%>/edit"><%= item.employee %></a></td>
          <td>Сотрудник</td>
        </tr>
        <%}) %>

      </tbody>
    </table>
  </div>
</div>

<%- include('../includes/footer')%>